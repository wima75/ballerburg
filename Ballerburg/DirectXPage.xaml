                 BorderBrush="{x:Null}" TextChanged="TextChanged">
                </TextBox>
                <TextBox Name="ei_n5" Visibility="Collapsed" FontFamily="Assets/resx/atari.ttf#Atari" FontSize="16" MaxLength="7" Text="" Padding="0,0,0,0" Background="Transparent" Canvas.Left="230" Canvas.Top="183"
                 BorderBrush="{x:Null}" TextChanged="TextChanged">
                </TextBox>
                <TextBox Name="ei_n6" Visibility="Collapsed" FontFamily="Assets/resx/atari.ttf#Atari" FontSize="16" MaxLength="7" Text="" Padding="0,0,0,0" Background="Transparent" Canvas.Left="359" Canvas.Top="183"
                 BorderBrush="{x:Null}" TextChanged="TextChanged">
                </TextBox>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>
